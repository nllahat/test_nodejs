// Place your settings in this file to overwrite default and user settings.
{
  "eslint.autoFixOnSave": true,
  "eslint.validate": [
    "javascript",
    { "language": "typescript", "autoFix": true }
  ],
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/dist": true,
    "**/coverage": true
  },
  "typescript.referencesCodeLens.enabled": true,
  "appService.zipIgnorePattern": [".vscode{,/**}"],
  "appService.deploySubpath": "",
  "workbench.colorCustomizations": {
    "activityBar.background": "#9ac181",
    "activityBar.activeBorder": "#5476ab",
    "activityBar.foreground": "#15202b",
    "activityBar.inactiveForeground": "#15202b99",
    "activityBarBadge.background": "#5476ab",
    "activityBarBadge.foreground": "#e7e7e7",
    "statusBar.background": "#7eb05f",
    "statusBarItem.hoverBackground": "#659349",
    "statusBar.foreground": "#15202b"
  },
  "peacock.color": "#7eb05f",
  "cSpell.words": [
    "mapbox"
  ]
}
